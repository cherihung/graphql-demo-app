{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "./dist",
        "allowJs": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        // "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": false,
        // mocha
        "noUnusedParameters": false,
        "inlineSources": true,
        "inlineSourceMap": true,
        "sourceRoot": "./src",
        "typeRoots": [
            "node_modules/@types"
          ],
          "lib": [
            "es2017",
            "dom",
            "esnext"
          ]
    },
    "include": [
        "*.ts",
        "/**/*.ts"
    ]
}